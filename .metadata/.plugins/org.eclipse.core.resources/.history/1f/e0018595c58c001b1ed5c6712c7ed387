package nestedForLoops;

import java.util.Scanner;

public class Pattern8 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner s=new Scanner(System.in);
		int t=s.nextInt();
		
		int num=2*t-1;
		for(int i=1;i<=num;i++)
		{
			if(i<=t)
			{
				for(int j=1;j<=i;j++)
				{
					System.out.print("*  ");
				}
			}
			
			else {
				for(int j=1;j<=t-1;j++)
				{
					System.out.println("*  ");
				}
				System.out.println();
				
			}
		}
	}

}
