package Practise;

import java.util.Scanner;

public class StarPrint {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner s=new Scanner (System.in);
		int t=s.nextInt();
		int row=2*t-1;
		for(int i=1;i<=row;i++)
		{
			if(i<=t) {
			for(int j=1;j<=t;j++)
			{
				System.out.println("* ");
			}
			}
			else 
				{
					for(int j=1;j<=row-t;j++)
					{
						System.out.println("* ");
					}
				}
			
		}
	}
}

